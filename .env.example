# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Format: postgresql://username:password@host:port/database
# Example for local: postgresql://postgres:password@localhost:5432/whatsapp_crm
# Example for remote: postgresql://user:pass@db.example.com:5432/dbname
DATABASE_URL=postgresql://postgres:password@localhost:5432/whatsapp_crm

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Generate a strong random secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-use-at-least-32-characters

# CORS Configuration
# Frontend URL - update this to match your frontend application URL
# Development: http://localhost:5173 (Vite default) or http://localhost:3000 (Create React App default)
# Production: https://yourdomain.com
CORS_ORIGIN=http://localhost:5173

# API Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Level (optional)
# Options: error, warn, info, debug
LOG_LEVEL=info

# WhatsApp API Configuration (if using WhatsApp Business API)
# WHATSAPP_API_URL=
# WHATSAPP_API_TOKEN=
# WHATSAPP_PHONE_NUMBER_ID=

# Email Configuration (optional, for notifications)
# SMTP_HOST=
# SMTP_PORT=
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM_EMAIL=

# Redis Configuration (optional, for caching and sessions)
# REDIS_URL=redis://localhost:6379

# File Upload Configuration (optional)
# MAX_FILE_SIZE=10485760
# UPLOAD_DIR=./uploads

# Webhook Configuration (optional)
# WEBHOOK_SECRET=
# WEBHOOK_URL=
